@using ShopASP.Utils
@model ShopASP.Areas.Identity.Models.AccountOrdersViewModel;

@{
    Layout = "_ProfilePageLayout";
}

<div class="container">
    <table class="table table-stripped table-hover">
        <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Products</th>
            <th scope="col">Status</th>
            <th scope="col">View</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var order in @Model.Orders)
        {
            <tr>
                <th>@order.Id</th>
                <td>
                    @foreach (var orderProduct in @order.Products)
                    {
                        <p>@orderProduct.Product.Name</p>
                    }
                </td>
                <td>@order.Status</td>
                <td>
                    <button class="btn btn-primary">View</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <nav aria-label="Pagination">
        <ul class="pagination">
            @{
                var pageLimits = PaginationUtils.GetPaginationLimits(@Model.CurrentPage, @Model.AllPages);

                var previousPage = @Model.CurrentPage - 1;
                var previousPageDisabled = "";
                if (previousPage <= 0)
                {
                    previousPageDisabled = "disabled";
                }

                var nextPage = @Model.CurrentPage + 1;
                var nextPageDisabled = "";
                if (nextPage > @Model.AllPages)
                {
                    nextPageDisabled = "disabled";
                }
            }


            <li class="page-item @previousPageDisabled">
                <a class="page-link" href="@Url.Action("ProfilePage", "Profile", new { page = previousPage })">Previous</a>
            </li>

            @for (int start = pageLimits[0]; start <= pageLimits[1]; start++)
            {
                var active = start == @Model.CurrentPage ? "active" : "";
                <li class="page-item @active">
                    <a class="page-link" href="@Url.Action("ProfilePage", "Profile", new { page = start })">@start</a>
                </li>
            }

            <li class="page-item @nextPageDisabled">
                <a class="page-link" href="@Url.Action("ProfilePage", "Profile", new { page = nextPage })">Next</a>
            </li>
        </ul>
    </nav>

</div>